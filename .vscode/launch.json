{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug nging (CodeLLDB)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/nging",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "cmake: build"
    },
    {
      "name": "Debug nging (Lua breakpoints)",
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "${workspaceFolder}/build/nging"
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "cmake: build"
    },
    {
      "name": "C Debug (Linux GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/nging",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        { "description": "Enable pretty-printing for gdb", "text": "-enable-pretty-printing", "ignoreFailures": true },
        { "description": "Set Disassembly Flavor to Intel", "text": "-gdb-set disassembly-flavor intel", "ignoreFailures": true }
      ],
      "preLaunchTask": "cmake: build",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}
